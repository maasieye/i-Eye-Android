<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reserve_after.RequestToHelpActivity">

    <RelativeLayout
        android:id="@+id/rl_request_to_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_request_to_help"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tv_driver_help_request_to_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="421버스 기사님이\n탑승을 도와드립니다."
                android:fontFamily="@font/font_medium"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                />
            <TextView
                android:id="@+id/tv_remain_time_request_to_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="도착 2분 전"
                android:fontFamily="@font/font_regular"
                android:textColor="#ffffff"
                android:textSize="27sp"
                android:layout_marginTop="33dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_request_to_help"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@color/light_gray"
        android:textSize="41sp"
        android:textColor="@color/text"
        android:lineSpacingExtra="20sp"
        android:fontFamily="@font/font_bold"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="도움 요청 완료"/>

</RelativeLayout>