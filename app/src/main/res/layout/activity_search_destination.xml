<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustPan"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/orange">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:text="목적지 검색"/>
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_top_dest_search"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/iv_search_dest_search"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/icon_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="17dp"/>
            <EditText
                android:id="@+id/et_search_dest_search"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/iv_search_dest_search"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:maxLines="1"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:hint="장소를 입력해주세요."
                android:fontFamily="@font/font_medium"
                android:textColor="#ffffff"
                android:textColorHint="#fff"
                android:background="@null"
                android:textSize="26sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#707070"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_search_dest_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cl_top_dest_search"
            app:layout_constraintBottom_toTopOf="@id/tv_voice_dest_search"/>
        <TextView
            android:id="@+id/tv_voice_dest_search"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:layout_constraintTop_toBottomOf="@id/rv_search_dest_search"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:background="@color/gray"
            android:fontFamily="@font/font_medium"
            android:textColor="@color/black"
            android:textSize="41sp"
            android:text="음성입력"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>