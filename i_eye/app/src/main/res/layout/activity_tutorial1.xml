<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tutorial.Tutorial1Activity">

    <TextView
        android:id="@+id/btn_next_tutorial1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="다음"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"
        android:fontFamily="@font/font_medium"
        android:textSize="41sp"
        android:textColor="@color/text"
        android:gravity="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_next_tutorial1"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시각장애인들의\n버스 탑승을\n도와드립니다."
                android:contentDescription="시각장애인들의 버스 탑승을 도와드립니다."
                android:textSize="33sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/font_bold"
                android:gravity="center"
                android:lineSpacingExtra="16sp"
                android:layout_marginBottom="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="목적지를 입력하면\n가까운 정류장과 버스를\n알려드립니다."
                android:contentDescription="목적지를 입력하면 가까운 정류장과 버스를 알려드립니다."
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:lineSpacingExtra="9sp"
                android:fontFamily="@font/font_regular"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>