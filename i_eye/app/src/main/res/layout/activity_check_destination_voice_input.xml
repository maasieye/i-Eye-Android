<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.reserve_before.CheckDestinationVoiceInputActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/orange">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:text="목적지 검색"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_dest_check_dest_voice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="215"
        android:background="@color/black"
        android:fontFamily="@font/font_medium"
        android:gravity="center"
        android:lineSpacingExtra="17sp"
        android:text="광화문역\n맞습니까?"
        android:textColor="#ffffff"
        android:textSize="35sp" />

    <LinearLayout
        android:id="@+id/linear_btn_dest_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_yes_dest_voice"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/orange"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="45sp"
            android:text="예"></TextView>

        <TextView
            android:id="@+id/btn_no_dest_voice"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/gray"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:textColor="@color/text"
            android:textSize="41sp"
            android:text="아니요"></TextView>
    </LinearLayout>
</LinearLayout>